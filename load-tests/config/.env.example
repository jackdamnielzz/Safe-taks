# Load Testing Environment Configuration
# Copy this file to .env and fill in your values

# Target Environment
BASE_URL=http://localhost:3000
API_BASE_URL=http://localhost:3000/api

# Firebase Configuration (for authentication)
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id

# Test User Credentials
TEST_ADMIN_EMAIL=admin@test.com
TEST_ADMIN_PASSWORD=TestPassword123!
TEST_SAFETY_MANAGER_EMAIL=safety@test.com
TEST_SAFETY_MANAGER_PASSWORD=TestPassword123!
TEST_SUPERVISOR_EMAIL=supervisor@test.com
TEST_SUPERVISOR_PASSWORD=TestPassword123!
TEST_FIELD_WORKER_EMAIL=worker@test.com
TEST_FIELD_WORKER_PASSWORD=TestPassword123!

# Test Organization
TEST_ORG_ID=test-org-id
TEST_ORG_NAME=Test Organization

# Load Testing Parameters
VIRTUAL_USERS=10
DURATION=60s
RAMP_UP_TIME=10s
THINK_TIME=2s

# Performance Thresholds
MAX_RESPONSE_TIME=500
MAX_ERROR_RATE=0.01
MIN_REQUESTS_PER_SECOND=10

# Results Output
RESULTS_DIR=./load-tests/results
REPORT_FORMAT=html,json